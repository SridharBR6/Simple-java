name: Eslint-PR-inline-Analysis
on:
  pull_request:
    branches:
      - eslint

jobs:
  Eslint-PR:
    runs-on: ubuntu-latest
    container:
      image: maven:3.8.4-jdk-8
    name: Triggering Eslint PR analysis
    steps:
     # - name: fetching code
     #  uses: actions/checkout@v3
     #  with:
     #       fetch-depth: 0
     # - name: Java-Build
     #   run: mvn -B clean verify

      - name: Eslint inline scan (Java)
        uses: philips-internal/eslint-inline-action@v1.0.0
        with:
            ci_cd_github_token: ${{ secrets.GH_SRIDHAR_PAT_TOKEN }}
            basesha: ${{ github.event.pull_request.base.sha }}
            headsha: ${{ github.event.pull_request.head.sha }}
            pullrequest: ${{ github.event.number }}
            language: java
            exclude: "./**/test/*.java"
